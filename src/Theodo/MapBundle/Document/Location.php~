<?php

namespace Theodo\MapBundle\Document;

use Doctrine\ODM\MongoDB\Mapping\Annotations as MongoDB;

/** @MongoDB\Document */
class Location
{
    /** @MongoDB\Id */
    public $id;

    /** @MongoDB\String */
    public $name;

    /** @MongoDB\Float */
    public $lat;
    /** @MongoDB\Float */
    public $lng;

    public function __construct($location)
    {
        $this->name = $location['name'];
        $this->lat  = $location['lat'];
        $this->lng  = $location['lng'];
    }

    /**
     * Get id
     *
     * @return id $id
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set lat
     *
     * @param float $lat
     * @return Location
     */
    public function setLat($lat)
    {
        $this->lat = $lat;
        return $this;
    }

    /**
     * Get lat
     *
     * @return float $lat
     */
    public function getLat()
    {
        return $this->lat;
    }

    /**
     * Set lng
     *
     * @param float $lng
     * @return Location
     */
    public function setLng($lng)
    {
        $this->lng = $lng;
        return $this;
    }

    /**
     * Get lng
     *
     * @return float $lng
     */
    public function getLng()
    {
        return $this->lng;
    }
}
